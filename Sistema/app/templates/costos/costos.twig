{% extends 'overall/layout' %}
{% block appHeader %}
  <!-- DataTables -->
  <link rel="stylesheet" href="views/theme/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
  <style>
    .example-modal .modal {
      position: relative;
      top: auto;
      bottom: auto;
      right: auto;
      left: auto;
      display: block;
      z-index: 1;
    }

    .example-modal .modal {
      background: transparent !important;
    }
  </style>
{% endblock %}

{% block appBody %}
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        COLEGIO
        <small>Escuela de fútbol 'Pasión de vida'</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#">Costos</a></li>
        <li class="active">Costos</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">

            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>Plan de 3 dias</th>
                  <th>Plan de 5 dias</th>
                  <th>Mensualidad</th>
                  <th>Costo uniforme</th>
                  <th>Editar</th>
                </tr>
                </thead>
                <tbody>
                {% for c in costos %}
                    <tr>
                        <td>{{ c.plan_3dias }}</td>
                        <td>{{ c.plan_5dias }}</td>
                        <td>{{ c.mensualidad }}</td>
                        <td>{{ c.costouniforme }}</td>
                        <td><a type="button" data-toggle="modal" data-target="#modal_editar_costos" onclick="edit_costos({{ c.plan_3dias }},{{ c.plan_5dias }},{{ c.mensualidad }},{{ c.costouniforme }})"><i class="fa fa-edit"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>


              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
      {% include 'costos/editar' %}

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}

{% block appFooter %}
<script src="views/app/js/costos/editar.js"></script>
<!-- DataTables -->
<script src="views/theme/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="views/theme/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- page script -->
<script>
  $(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>


{% endblock %}
