<section class="content">
    <div class="modal fade" id="modal-agregar-partido">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Crear Partidos</h4>
              </div>
              <div class="modal-body">
                <!-- text input -->
                  <div class="form-group">
                    <label>Equipo Local</label>
                    <select class="form-control select2" name="local"  data-placeholder="" id="agregar_local">
                      <option disabled selected value></option>
                      {% for e in equipos %}
                      <option value="{{ e.nombre_equipo }}">{{ e.nombre_equipo }}</option>
                      {% endfor %}
                    </select>
                    <label>Equipo Visitante</label>
                    <select class="form-control select2" name="visitante"  data-placeholder="" id="agregar_visitante">
                      <option disabled selected value></option>
                      {% for e in equipos %}
                      <option value="{{ e.nombre_equipo }}">{{ e.nombre_equipo }}</option>
                      {% endfor %}
                    </select>
                  </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="agregar_partido" onclick="agregar_partido()" data-dismiss="modal">Agregar Partidos</button>
              </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</section>
