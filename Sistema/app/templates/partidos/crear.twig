<div class="modal fade" id="modal-crear-partido">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Seleccione un producto</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form role="form" id="crear_partido_form">
                    <label>Temporada</label>
                    <select name="anio_ini" class="form-control select2">
                    {% for i in 2018..2030 %}
                    <option value="{{ i }}">{{ i }}</option>
                    {% endfor %}
                    </select>
                    <select name="anio_fin" class="form-control select2">
                        {% for i in 2018..2030 %}
                        <option value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                    <label>Categoría</label>                                    
                    <select name="categoria" id="categorias_partidos" class="select2 form-control" onchange="get_equipos()">
                    <option default disable value></option>
                        {% for c in categorias %}
                        <option value="{{ c.nombre_categoria }}">{{ c.nombre_categoria }}</option>
                        {% endfor %}
                    </select>
                    <label>Ronda</label>                                    
                    <select name="ronda" id="ronda_partidos" class="select2 form-control" onchange="inicial()">
                    <option default disable value></option>
                        {% for i in 0..2 %}
                            {% if i ==0 %}
                            <option value="{{ i }}">Inicial</option>
                            {% elseif i==1 %}
                            <option value="{{ i }}">Eliminacion</option>
                            {% else %}
                            <option value="{{ i }}">Final</option>
                            {% endif %}
                        {% endfor %}
                    </select> 
                    
                    <table class="table table-bordered table-striped table-responsive data-table" id="added-product">
                        <thead>
                            <tr>
                                <th>Local</th>
                                <th>Visitante</th>
                                <th>Fecha</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody id="body-partidos">
                        </tbody>
                      </table>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="crear_partido">Crear Horario de Partidos</button>
                <button type="button" id="" class="btn btn-primary" data-toggle="modal" data-target="#modal-agregar-partido">Añadir Partidos</button>
            </div>
        </div>
    </div>
</div>

