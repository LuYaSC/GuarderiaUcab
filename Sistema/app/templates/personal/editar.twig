                <input type="tel" class="form-control" placeholder="" name="tlf_celular" id="tlf_celular_editar">
                <label>Fecha de Nacimiento</label>
                <input type="date" class="form-control" placeholder="" name="fecha_nacimiento" id="fecha_nacimiento_editar">
                <label>Nacionalidad</label>
                <input type="text" class="form-control" placeholder="Nacionalidad" name="nacionalidad" id="nacionalidad_editar">
              </div>
              <div class="form-group" onchange="mostrarProfesionEditar()">
                <label>Tipo Empleado</label>
                <div class="radio">
                  <label>
                    <input type="radio" name="tipo_empleado" id="tipo_empleado1_editar" value="1">
                    Coordinador Tecnico
                  </label>
                </div>
                <div class="radio">
                  <label>
                    <input type="radio" name="tipo_empleado" id="tipo_empleado2_editar" value="2">
