              <h4 class="modal-title">Editar Empleado</h4>
            </div>
            <div class="modal-body">
              <form role="form" id="editar_personal_form">
              <!-- text input -->
              <div class="form-group">
                <input type="hidden" class="form-control" placeholder="Cedula" name="cedula" id="cedula_editar">
                <label>Nombre</label>
                <input type="text" class="form-control" placeholder="Nombre..." name="nombre" id="nombre_editar">
                <label>Apellido</label>
                <input type="text" class="form-control" placeholder="Apellido..." name="apellido" id="apellido_editar">
