{% extends 'overall/layout' %}
{% block appHeader %}
  <!-- DataTables -->
  <link rel="stylesheet" href="views/theme/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
  <style>
    .example-modal .modal {
      position: relative;
      top: auto;
      bottom: auto;
      right: auto;
      left: auto;
      display: block;
      z-index: 1;
    }

    .example-modal .modal {
      background: transparent !important;
    }
  </style>
{% endblock %}

{% block appBody %}
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        ASISTENCIA
        <small>Escuela de fútbol 'Pasión de vida'</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#">Jugadores</a></li>
        <li class="active">Aistencia</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Asistencia</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div class="table-responsive">
                <form role="form" id="guardar_asistencia_form">
                <select class="form-control select2" name="sede" id="sede_asistencia"  onchange="get_dias_asistidos()">
                    <option disabled selected value></option>
                    {% for s in sedes %}
                    <option value="{{ s.codigo_sede }}">{{ s.nombre }}</option>
                    {% endfor %}
                </select>
                <select class="form-control select2" name="dia" id="dia_asistencia"  onchange="get_alumnos_asistencia()">
                    <option disabled selected value></option>
                </select>
                <input type="hidden" name="anio_ini" id="anio_ini" value="">
                <input type="hidden" name="anio_fin" id="anio_fin" value="">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Cedula</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Faltó</th>
                        <th>Hora de llegada</th>
    
                    </thead>
                    <tbody id="body_asistencia">
                    </tbody>
                  </table>
                  <a href="asistencia/crear">PASAR ASISTENCIA</a>
                </form>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
      {% include 'asistencia/editar' %}
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}

{% block appFooter %}
<script src="views/app/js/asistencia/crear.js"></script>
<!-- DataTables -->
<script src="views/theme/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="views/theme/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- page script -->
<script>
  $(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>

{% endblock %}
