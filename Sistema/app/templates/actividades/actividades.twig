{% extends 'overall/layout' %}
{% block appHeader %}
  <!-- DataTables -->
  <link rel="stylesheet" href="views/theme/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
  <style>
    .example-modal .modal {
      position: relative;
      top: auto;
      bottom: auto;
      right: auto;
      left: auto;
      display: block;
      z-index: 1;
    }

    .example-modal .modal {
      background: transparent !important;
    }
  </style>
{% endblock %}

{% block appBody %}
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Actividades
        <small>Guarderia</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#">Actividades</a></li>
        <li class="active">Listado de Actividades</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Listado de Actividades</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div class="table-responsive">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>id_actividad</th>
                    <th>codigo</th>
                    <th>nombre</th>
                    <th>transporte</th>
                    <th>costo_trans</th>
                    <th>edad_minima</th>
                    <th>descripcion</th>
                    <th>Editar</th>
                    <th>Eliminar</th>

                  </thead>
                  <tbody>
                  {% for r in actividades %}
                      <tr>
                          <td>{{ r.id_actividad }}</td>
                          <td>{{ r.codigo }}</td>
                          <td>{{ r.transporte }}</td>
                          <td>{{ r.costo_trans }}</td>
                          <td>{{ r.edad_minima }}</td>
                          <td>{{ r.descripcion }}</td>
                          <td><a type="button" data-toggle="modal" data-target="#modal_editar_actividades" onclick="edit_actividades('{{ r.nombre }}','{{ r.apellido }}','{{ r.cedula_actividades }}','{{ r.telefono_oficina }}','{{ r.telefono_casa }}','{{ r.telefono_celular }}','{{ r.sexo }}','{{ r.direccion }}','{{ r.profesion }}')"><i class="fa fa-edit"></i></a></td>
                          <td><a type="button" href="actividadess/eliminar/{{ r.cedula }}"><i class="fa fa-trash"></i></a></td>
                      </tr>
                  {% endfor %}
                  </tbody>
                </table>
                <button type="button" class="btn btn-block btn-primary btn-flat" data-toggle="modal" data-target="#modal_crear_actividades"><i class="fa fa-plus-circle"></i> CREAR NUEVO ACTIVIDADES</button>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
      {# Creaci√≥n de producto #}
      {% include 'representantes/crear' %}
      {% include 'representantes/editar' %}
      {#% include 'colegios/eliminar' %#}
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}

{% block appFooter %}
<script src="views/app/js/actividades/crear.js"></script>
<script src="views/app/js/actividades/editar.js"></script>
<!-- DataTables -->
<script src="views/theme/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="views/theme/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- page script -->
<script>
  $(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>


<script>
/*Evento ejecutado al realizar click sobre el button "busqueda_criterio" */
$('#busqueda_criterio_actividadess').click(function(e) {
e.defaultPrevented;

/*Nombre del crud*/
var crud = "actividadess/";

/*Criterio de busqueda , definido en el select "criterio" */
var criterio = $("#criterio_actividadess").val().concat("/");

/*Valor a buscar , escrito en el input "data"*/
var valor = $("#data_actividadess").val();

/*Link con todos los datos*/
var busqueda=crud.concat(criterio).concat(valor);

/*Redireccion al link*/
location.href = busqueda;
});
</script>


{% endblock %}
