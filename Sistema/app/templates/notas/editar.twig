<div class="modal fade" id="modal_editar_nota">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Editar notas</h4>
            </div>
            <div class="modal-body">
              <form role="form" id="editar_nota_form">
              <!-- text input -->
              <div class="form-group">
                    <label>Año inicio</label>
                    <input type="text" class="form-control" placeholder="" name="año_ini" id="id_año_ini">
                    <label>Año final</label>
                    <input type="text" class="form-control" placeholder="" name="año_fin" id="id_año_fin">
                    <label>Promedio</label>
                    <input type="text" class="form-control" placeholder="" name="promedio" id="id_promedio">
                    <label>Lapso</label>
                    <input type="tel" class="form-control" placeholder="" name="lapso" id="id_lapso">
                    <label>Jugador</label>
                    <select class="form-control select2" name="cedula_jugador"  data-placeholder="" id="id_cedula_jugador">
                    {% for j in jugadores %}
                        <option value="{{ j.id_jugador }}">{{ j.nombre }}, {{ j.apellido }}</option>
                    {% endfor %}
                    </select>
              </div>
           
            </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
              <button type="button" id="editar_nota" class="btn btn-primary">Guardar Cambios</button>
            </div>
          </div>
          <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
    
    