<div class="modal fade" id="modal_crear_jugador">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Crear Jugador</h4>
        </div>
        <div class="modal-body">
          <form role="form" id="crear_jugador_form">
          <!-- text input -->
          <div class="form-group">
            <label>Cedula</label>
            <input type="text" class="form-control" placeholder="Cedula" name="cedula">
            <label>Nombre</label>
            <input type="text" class="form-control" placeholder="Nombre" name="nombre">
            <label>Apellido</label>
            <input type="text" class="form-control" placeholder="Apellido" name="apellido">
            <label>Celular</label>
            <input type="tel" class="form-control" placeholder="Celular" name="celular" data-inputmask="'mask':['(999) 999-9999']" data-mask>
            <label>Fecha de nacimiento</label>
            <input type="date" class="form-control" placeholder="Fecha de nacimiento" name="fecha_nacimiento">
<!--hola-->
            <div class="form-group col-xs-12 col-sm-12 col-md-12">
                <label>Sexo</label>
                <input type="radio" id="id_sexo_hombre" name="sexo" value="m">
                <label for="id_sexo_hombre">Hombre</label>
                <input type="radio" id="id_sexo_mujer" checked="true" name="sexo" value="f">
                <label for="id_sexo_mujer">Mujer</label>
            </div>


            <label>Año de estudio</label>
            <input type="number" class="form-control" placeholder="Año de estudio" name="año_estudio" min="1">
            <label>Representante</label>
            <select class="form-control select2" name="cedula_representante"  data-placeholder="">
                <option disabled selected value></option>
            {% for r in representantes %}
                <option value="{{ r.cedula_representante }}">{{ r.nombre }}, {{ r.apellido }}</option>
            {% endfor %}
            </select>
            <label>Posicion del jugador</label>
            <select class="form-control select2" name="posicion"  data-placeholder="" id="id_posicion">
              <option disabled selected value></option>
              {% for p in posiciones %}
              <option value="{{ p.codigo_posicion }}">{{ p.descripcion }}</option>
              {% endfor %}
            </select>
            <label>Colegio</label>
            <select class="form-control select2" name="codigo_colegio"  data-placeholder="">
              <option disabled selected value></option>
              {% for c in colegios %}
              <option value="{{ c.codigo_colegio }}">{{ c.nombre }}</option>
              {% endfor %}
            </select>
            <label>Categoria</label>
            <select class="form-control select2" name="categoria"  data-placeholder="">
              <option disabled selected value></option>
              {% for c in categorias %}
              <option value="{{ c.nombre_categoria }}">{{ c.nombre_categoria }}</option>
              {% endfor %}
            </select>
    
          </div>

        </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
          <button type="button" id="crear_jugador" class="btn btn-primary">Crear Jugador</button>
        </div>
      </div>
      <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

