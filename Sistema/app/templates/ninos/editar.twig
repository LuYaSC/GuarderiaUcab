<div class="modal fade" id="modal_editar_nino">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Editar Nino</h4>
        </div>
        <div class="modal-body">
          <form role="form" id="editar_nino_form">
          <!-- text input -->
          <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="form-control" placeholder="Nombre" name="nombre" id="id_nombre">
                <label>Apellido</label>
                <input type="text" class="form-control" placeholder="Apellido" name="apellido" id="id_apellido">
                <input type="hidden" class="form-control" name="codigo" id="id_codigo">
                <label>Fecha_nac</label>
                <input type="tel" class="form-control" placeholder="Fecha de Nacimiento" name="fecha_nac" id="id_fechanac">
                <label>Sexo</label>
                <input type="tel" class="form-control" placeholder="Sexo" name="sexo" id="id_sexo">
                <label>Enfermedades</label>
                  <select class="select2 form-control" name="enfermedades[]"  data-placeholder="Enfermedades" multiple="multiple">
                          {% for e in enfermedades %}
                          <option value="{{ e.id_enfermedad }}"> {{ e.descripcion }}</option>
                          {% endfor %}
                </select>

                <label>Alergias</label>
                  <select class="select2 form-control" name="alergias[]"  data-placeholder="Alergias" multiple="multiple">
                          {% for a in alergias %}
                          <option value="{{ a.id_alergia }}"> {{ a.descripcion }}</option>
                          {% endfor %}
                  </select>

                <label>Medicamentos</label>
                  <select class="select2 form-control" name="medicinas[]"  data-placeholder="Medicinas" multiple="multiple">
                          {% for m in medicinas %}
                          <option value="{{ m.id_medicina }}"> {{ m.descripcion }}</option>
                          {% endfor %}
                </select>

                <label>Juegos</label>
                <select class="select2 form-control" name="juegos[]"  data-placeholder="Juegos" multiple="multiple">
                          {% for j in juegos %}
                          <option value="{{ j.id_juego }}"> {{ j.descripcion }}</option>
                          {% endfor %}
                </select>

                <label>Autorizado</label>
                <select class="select2 form-control" name="autorizados[]"  data-placeholder="Autorizados">
                  <option>No tiene autorizados</option>
                  {% for z in autorizado %}
                    <option value="{{ z.id_autorizado }}">Nombre: {{ z.nombre }} - C.I: {{ z.cedula }}</option>
                  {% endfor %}
                </select>


          </div>
       
        </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
          <button type="button" id="editar_nino" class="btn btn-primary">Guardar Cambios</button>
        </div>
      </div>
      <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

