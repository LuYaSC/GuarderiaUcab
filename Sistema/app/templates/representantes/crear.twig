<div class="modal fade" id="modal_crear_representante">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Crear Representante</h4>
        </div>
        <div class="modal-body">
          <form role="form" id="crear_representante_form">
          <!-- text input -->
          <div class="form-group">
            <label>Nombre</label>
            <input type="text" class="form-control" placeholder="Nombre" name="nombre">

            <label>Apellido</label>
            <input type="text" class="form-control" placeholder="Apellido" name="apellido">

            <label>Cedula</label>
            <input type="text" class="form-control" placeholder="Cedula" name="cedula">

           <label>Direccion</label>
            <input type="textbox" class="form-control" placeholder="Calle/Av, Edif/Casa, Urbanización," name="direccion">

           <label>Email</label>
            <input type="text" class="form-control" placeholder="Email" name="email">

            <label>Teléfono de Casa</label>
            <input type="tel" class="form-control" placeholder="" name="tlf_casa" data-inputmask="'mask':['(999) 999-9999']" data-mask>

            <label>Teléfono de Oficina</label>
            <input type="tel" class="form-control" placeholder="" name="tlf_oficina" data-inputmask="'mask':['(999) 999-9999']" data-mask>

            <label>Teléfono Celular</label>
            <input type="tel" class="form-control" placeholder="" name="tlf_celular" data-inputmask="'mask':['(999) 999-9999']" data-mask>

            <label>Profesion</label>
            <input type="text" class="form-control" placeholder="" name="profesion" >

               <div class="form-group col-xs-12 col-sm-12 col-md-12">
                <label>Estado Civil</label>
                <input type="radio" id="id_soltero" name="edocivil" value="Soltero">
                <label for="id_soltero">Soltero</label>
                <input type="radio" id="id_casado" checked="true" name="edocivil" value="Casado">
                <label for="id_casado">Casado</label>
                <input type="radio" id="id_divorciado" checked="true" name="edocivil" value="Divorciado">
                <label for="id_casado">Divorciado</label>  

            </div>

               <div class="form-group col-xs-12 col-sm-12 col-md-12">
                <label>Vive con el nino</label>
                <input type="radio" id="id_vivenino1" name="vivenino" value="Si">
                <label for="id_vivenino1">Si</label>
                <input type="radio" id="id_vivenino2" checked="true" name="vivenino" value="No">
                <label for="id_vivenino2">No</label>
            </div>

             <div class="form-group col-xs-12 col-sm-12 col-md-12">
                <label>Principal</label>
                <input type="radio" id="id_sexo_hombre" name="sexo" value="1">
                <label for="id_sexo_hombre">Si</label>
                <input type="radio" id="id_sexo_mujer" checked="true" name="sexo" value="0">
                <label for="id_sexo_mujer">No</label>
            </div>

          </div>
         </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
          <button type="button" id="crear_representante" class="btn btn-primary">Crear Representante</button>
        </div>
      </div>
      <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
