{% extends 'overall/layout' %}
{% block appHeader %}
  <!-- DataTables -->
  <link rel="stylesheet" href="views/theme/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
  <style>
    .example-modal .modal {
      position: relative;
      top: auto;
      bottom: auto;
      right: auto;
      left: auto;
      display: block;
      z-index: 1;
    }

    .example-modal .modal {
      background: transparent !important;
    }
  </style>
{% endblock %}

{% block appBody %}
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        PLANES SEMANALES  
        <small>Escuela de fútbol 'Pasión de vida'</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#">Plan Semanal</a></li>
        <li class="active">Listado de Planes Semanales</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Listado de Jugadores</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <form id="busqueda_form">
                        <div class="col-xs-12 col-sm-6 col-md-3">
                          <input type="text" class="form-control" placeholder="Plan de Entrenamiento" id="plan_criterio" name="plan_criterio">
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-3">
                          <input type="text" class="form-control datepicker" placeholder="Nacionalidad" id="nacionalidad_criterio" name="nacionalidad_criterio">
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-3">
                          <input type="number" class="form-control" placeholder="Numero de jugadores" id="jugadores_criterio" name="jugadores_criterio">
                        </div>
                        <div class="col-xs-12 col-sm-2 col-md-2">
                           <button type="button" id="busqueda_criterio" class="btn btn-primary btn-lacra" onclick="busqueda()">Buscar</button>  
                        </div>
                    </form>
                </div>
              <div class="table-responsive">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Plan de Entrenamiento</th>
                        <th>Ejercicio</th>
                        <th>Categoría</th>
                        <th>Posición</th>
                        <th>Duración</th>
    
                    </thead>
                    <tbody id="plansemanal_body">
                    {% for p in plansemanal %}
                        <tr>
                            <td>{{ p.nombre_plan }}</td>
                            <td>{{ p.ejercicio }}</td>
                            <td>{{ p.nombre_categoria }}</td>
                            <td>{{ p.posicion }}</td>
                            <td>{{ p.duracion}}</td> 
                          
                        </tr>
                    {% endfor %}
                    </tbody>
                  </table>
                  <button type="button" class="btn btn-block btn-primary btn-flat" data-toggle="modal" data-target="#modal_crear_plan"><i class="fa fa-plus-circle"></i> ASIGNAR PLAN</button>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
      {% include 'plansemanal/crear' %}
      {% include 'plansemanal/editar' %}
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}

{% block appFooter %}
<script src="views/app/js/plansemanal/crear.js"></script>
<script src="views/app/js/plansemanal/editar.js"></script>
<!-- DataTables -->
<script src="views/theme/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="views/theme/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- page script -->
<script>
  $(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>

{% endblock %}
