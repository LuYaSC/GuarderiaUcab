{% extends 'overall/layout' %}
{% block appHeader %}
  <!-- DataTables -->
  <link rel="stylesheet" href="views/theme/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
  <style>
    .example-modal .modal {
      position: relative;
      top: auto;
      bottom: auto;
      right: auto;
      left: auto;
      display: block;
      z-index: 1;
    }

    .example-modal .modal {
      background: transparent !important;
    }
  </style>
{% endblock %}

{% block appBody %}
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Comidas
        <small>Guarderia</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#">Comidas</a></li>
        <li class="active">Listado de Comidas</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Listado de Comidas</h3>
            </div>

              <div class="table-responsive">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>Tipo</th>
                    <th>Descripción</th>
                    <th>Editar</th>
                    <th>Eliminar</th>

                  </thead>
                  <tbody>
                  {% for c in comida %}
                      <tr>
                          <td>{{ c.tipo }}</td>
                          <td>{{ c.descripcion }}</td>
                          <td><a type="button" data-toggle="modal" data-target="#comidas" onclick="edit_comidas('{{ c.id_comida }}','{{ c.tipo }}','{{ c.descripcion }}'')"><i class="fa fa-edit"></i></a></td>
                          <td><a type="button" href="comidas/eliminar/{{ c.id_comida}}"><i class="fa fa-trash"></i></a></td>
                      </tr>
                  {% endfor %}
                  </tbody>
                </table>
                <button type="button" class="btn btn-block btn-primary btn-flat" data-toggle="modal" data-target="#modal_crear_medicinas"><i class="fa fa-plus-circle"></i> CREAR NUEVA COMIDA</button>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
      {# Creación de producto #}
      {#% include 'colegios/eliminar' %#}
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}

{% block appFooter %}
<script src="views/app/js/medicinas/crear.js"></script>
<script src="views/app/js/medicinas/editar.js"></script>
<!-- DataTables -->
<script src="views/theme/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="views/theme/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- page script -->
<script>
  $(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>


<script>
/*Evento ejecutado al realizar click sobre el button "busqueda_criterio" */
$('#busqueda_criterio_representantes').click(function(e) {
e.defaultPrevented;

/*Nombre del crud*/
var crud = "representantes/";

/*Criterio de busqueda , definido en el select "criterio" */
var criterio = $("#criterio_representantes").val().concat("/");

/*Valor a buscar , escrito en el input "data"*/
var valor = $("#data_representantes").val();

/*Link con todos los datos*/
var busqueda=crud.concat(criterio).concat(valor);

/*Redireccion al link*/
location.href = busqueda;
});
</script>


{% endblock %}
